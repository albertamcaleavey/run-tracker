<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/goals/edit.css">
<%- include('../partials/nav') %>

<main>
  <% if (user) { %>
    <div class="header" >
      <a class="back-arrow" href="/goals"><i class="fa-solid fa-angle-left"></i></a>
      <h1><%= title %></h1>
      <form action="/goals/<%= goal._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger btn-lg"><i class="fa-solid fa-trash-can"></i></button>
      </form>
    </div>
    <div class="card">
      <form action="/goals/<%= goal._id %>?_method=PUT" method="POST">
        <div>
          <input size="20" class="edit-goal-input" type="text" maxlength="300" name="content" value="<%= goal.content %>">
        </div>
        <div class="checkbox">Achieved
          <input name="achieved" type="checkbox"
          <%= goal.achieved ? 'checked' : '' %>
          >
        </div>
        <div class="update-btn">
          <button type="submit" class="btn btn-primary btn-lg">Update</button>
        </div>
      </form>
    </div>
      <% } %>
</main>

<%- include('../partials/footer') %>